<div class="banner offers" style="background-image: linear-gradient(to right, rgb(55, 59, 68), rgb(66, 134, 244));">
  <div class="banner-container offers">
    <h1>Welcome, <%=current_user.full_name%> &#128188;</h1>
    <div id="banner-logo-seperator"></div>
    <h3>These are the applications for <%=@inquiry.offer.title%></h3>
    <%if @inquiry.chatroom%>
      <%= link_to chatroom_path(@inquiry.chatroom), class: "btn-offer btn-success btn" do %>Go to Chat<%end%>
    <%else%>
     <%= link_to create_chat_offer_inquiry_path(@inquiry.offer, @inquiry), class: "btn-offer btn-success btn" do %>Initiate Chat<%end%>
    <%end%>
  </div>
</div>
<div class="container inquiry">
    <div class="col-xl-6 col-md-12">
      <div class="card user-card-full">
        <div class="row m-l-0 m-r-0">
          <div class="col-sm-4 bg-c-lite-green user-profile">
            <div class="card-block text-center text-white">
              <h5>Applicant</h5>
              <div class="m-b-25"> <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius"
                  alt="User-Profile-Image"> </div>
              <h6 class="f-w-600"><%=@inquiry.user.full_name%></h6>
              <p><%=@inquiry.user.developer_role%></p> <i
                class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
            </div>
          </div>
          <div class="col-sm-8">
            <div class="card-block">
              <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Contact</h6>
              <div class="row">
                <div class="col-sm-6">
                  <p class="m-b-10 f-w-600">Email &#128231;</p>
                  <h6 class="text-muted f-w-400"><%=@inquiry.user.email%></h6>
                </div>
                <div class="col-sm-6">
                  <p class="m-b-10 f-w-600">Phone &#128241;</p>
                  <h6 class="text-muted f-w-400"><%=@inquiry.user.phone_number%></h6>
                </div>
              </div>
              <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">General Info</h6>
              <div class="row">
                <div class="col-sm-6">
                  <p class="m-b-10 f-w-600">Website &#128187;</p>
                  <h6 class="text-muted f-w-400"><%=@inquiry.user.website%></h6>
                </div>
                <div class="col-sm-6">
                  <p class="m-b-10 f-w-600">Location&#127757;</p>
                  <h6 class="text-muted f-w-400"><%=@inquiry.user.location%></h6>
                </div>
              </div>
              <ul class="social-link list-unstyled m-t-40 m-b-10">
                <li><i class="fab fa-github fa-2x"></i>
                </li>
                <li><i class="fab fa-linkedin fa-2x"></i>
                </li>
                <li><i class="fab fa-facebook fa-2x"></i></li>
              </ul>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="card offers mx-auto">
      <div class="row">
        <div class="logo offers ml-3 mb-3"><img
            src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTxDRpxI5gXgaVmnO-VgcVUNOkca91jIpS75Flbzkz5W_5g5_V5&usqp=CAU">
        </div>
        <div class="card-title-info">
          <div class="card-title">
            <h5 class="heading" style="color: black;"><%= link_to offer_path(@inquiry.offer) do %>
            <%= @inquiry.offer.title %>
            <% end %></h5>
          </div>
          <div class="offer-details">
           <button type="button" class="btn  btn-sm" style="background: #8B2635; "><%=@inquiry.offer.employment_type%></button>
            <button type="button" class="btn  btn-sm" style="background: #8B2635; ">
            <%if @inquiry.offer.fixed_price%>Fixed Price<%else%>Per Hour<%end%></button>
            <button type="button" class="btn  btn-sm" style="background: #8B2635;"><%=@inquiry.offer.location%></button>
          </div>
        </div>
      </div>
      <p class="text-muted"><%=@inquiry.offer.description%></p>

      <div class="row btnsubmit mt-4">
        <div style="padding-top: 1rem; padding-left: 0.4rem;"> <%= link_to new_offer_inquiry_path(@inquiry.offer) do %>
          <button name="button" type="submit" class="btn-offer btn1 btn btn-success"><i
              class="fab fa-telegram-plane"></i>
            Apply</button>
          <% end %></div>
        <div style="padding-top: 1rem; padding-left: 0.4rem;">
          <%= button_to bookmark_path(@inquiry.offer), class: "btn-offer btn-success btn", method: :post, remote: true do %>
          <i class="fa<%= @inquiry.offer.saved ? 's' : 'r' %> fa-bookmark"></i> Save
          <% end %> </div>
      </div>
    </div>


    </div>
    </div>
    <!-- CUSTOM BLOCKQUOTE -->
    <div class="container message">
    <blockquote class="blockquote blockquote-custom bg-white p-5 shadow rounded">
      <div class="blockquote-custom-icon bg-info shadow-sm"><i class="fa fa-quote-left text-white"></i></div>
      <p class="mb-0 mt-2 font-italic"><%=@inquiry.message%></p>
      <footer class="blockquote-footer pt-4 mt-4 border-top">
        <%=@inquiry.user.full_name%>
      </footer>
    </blockquote><!-- END -->
    </div>
