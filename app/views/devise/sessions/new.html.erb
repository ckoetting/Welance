<!-- sessions/new -->
<div class="device-wrapper">
  <div class="sign-up-text-box text-white">
    <h1 class="mb-4">Connecting companies & freelance developers like never before</h1>
    <p>Through our marketplace, employers can hire freelancers to do work in areas such as software development, data entry and design right through to engineering, the sciences and sales and marketing.
    </p>
  </div>
  <div class="device-container">
    <div>
      <ul class="nav welance justify-content-center pb-3">
        <li class="nav-item w-50">
          <a class="nav-link" href="<%= new_user_registration_path %>">SIGN UP</a>
        </li>
        <li class="nav-item w-50">
          <a class="nav-link active" href="<%= new_user_session_path %>">SIGN IN</a>
        </li>
      </ul>
    </div>

    <div class="form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <%= render "devise/shared/gh_signin" %>
      <div class="form-actions mt-2">
        <%= f.button :submit, "Business Log in", class: "btn btn-primary btn-block mb-2" %>
        <%= render "devise/shared/forgot_pw" %>
      </div>
      <% end %>
      <div class="separator my-3">Don't have an account?</div>
      <%= render "devise/shared/signup_btn" %>
    </div>
  </div>
</div>
