<!-- registration edit -->
<div class="device-wrapper edit">
  <div class="device-container edit gradient-topleft">
  <div class="inside-device-container pr-5 border-right" id="user-container">
    <h2 id="user-title">Choose user type</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.hidden_field :provider, :value => current_user.provider %>
      <%= f.hidden_field :type, :value => current_user.user_type %>
      <%= f.input :user_type, label: false, :collection => %w[Developer Business] %>
    </div>

    <div class="form-inputs" id="Developer">
      <%= f.label :full_name, class: 'text-white' %>
      <%= f.input :full_name, label: false, autofocus: true %>
      <%= f.input :bio, as: :text, autofocus: true %>
      <%= f.input :location, label: 'Address', autofocus: true %>
      <%= f.input :dob, label: 'Date of birth', autofocus: true %>
      <%= f.input :phone_number, autofocus: true %>
      <%= f.input :photo, label: 'Avatar', as: :file %>
    </div>
    <div class="form-inputs" id="Business">
      <%= f.input :business_name, autofocus: true, class: 'text-white' %>
      <%= f.input :business_address, label: 'Address', autofocus: true %>
      <%= f.input :business_vat_id, label: 'Business VAT', autofocus: true %>
      <%= f.input :business_size, autofocus: true %>
      <%= f.input :phone_number, autofocus: true %>
      <%= f.input :website, autofocus: true %>
      <%= f.input :photo, label: 'Logo', as: :file %>
    </div>
  </div>

  <div class="inside-device-container login-details pl-5">
<!--     <h2>Edit <%= resource_name.to_s.humanize %></h2>
-->
<h2 class="user-edit-title">Login details</h2>
<div class="form-inputs">
  <%= f.input :email, required: true, autofocus: true %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
  <% end %>

  <%= f.input :password, label: 'New password',
  hint: "leave it blank if you don't want to change it",
  required: false,
  input_html: { autocomplete: "new-password" } %>
  <%= f.input :password_confirmation, label: 'New password confirmation',
  required: false,
  input_html: { autocomplete: "new-password" } %>

  <div class="current_password_field">
    <%= f.input :current_password,
    hint: "we need your current password to confirm your changes",
    required: true,
    input_html: { autocomplete: "current-password" } %>
  </div>
</div>

<div class="form-actions">
  <%= f.button :submit, "Confirm", class: "btn btn-success btn-block my-2" %>
</div>
<% end %>

<p><%= link_to "Cancel my account", registration_path(resource_name), class:"btn btn-danger btn-block",data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
</div>
</div>
<%= javascript_pack_tag 'user_edit' %>
