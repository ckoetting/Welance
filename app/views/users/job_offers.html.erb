<div class="banner offers" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1507679799987-c73779587ccf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2102&q=80);">
  <div class="banner-container offers">
     <h2>Welcome,  <%=current_user.full_name%> &#128188;</h2>
     <!-- <div id="banner-logo-seperator"></div> -->
     <h4>These are the applications for your open positions</h4>
  </div>
</div>

<div class="job-offers-container">
  <div class="job-offers">
      <% @job_offers.each do |inquiry| %>
      <div class="offers-index-offer card">
        <div class="offers-index-offer-head">
          <div class="offers-index-avatar">

            <img src="https://images.unsplash.com/photo-1589329482108-e414c7c6b8c7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=334&q=80" class="company-pic" >
          </div>
          <div class="offers-index-offer-name">
            <h4><%= inquiry.offer.title %></h4>
          </div>
        </div>
        <hr width="100%" color="gray">
        <div class="offers-index-offer-description inquiry">
          <h5> You have <%= inquiry.offer.inquiries.size%> application<%if inquiry.offer.inquiries.size > 1%>s<%end%> for this postion</h5>
        </div>
        <div class="offers-index-offer-actions">
           <%= link_to offer_path(inquiry.offer) do %>
           <button name="button" type="submit" class="btn-offer btn1 btn btn-success"><i class="fab fa-telegram-plane"></i> View Applications</button>
           <% end %>
        </div>
      </div>
      <% end %>
  </div>

</div>
