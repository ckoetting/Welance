<div class="wrapper-chatroom">
  <div class="header-chat">
    <div class="chat-avatars">
    <img src="<%=@chatroom.inquiry.user.avatar_url%>" class="chat-avatar-logo">
     <%= cl_image_tag @chatroom.inquiry.offer.user.photo.key, class: "chat-avatar-logo"%>
    </div>
     <h1>Conversation between <br><%=@chatroom.inquiry.user.full_name%> and <%=@chatroom.inquiry.offer.user.full_name%> (<%=@chatroom.inquiry.offer.user.business_name%>)</h1>
  </div>
  <div class="chat card-chat">
    <div class="d-flex">
      <div class="list-group w-200px bg-white br-light">
      </div>


      <div class="chatroom">
        <div>
          <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
            <% @chatroom.messages.each do |message| %>
            <%= render "messages/message", message: message %>
            <% end %>
          </div>
        </div>
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
        <%= f.input :content, label: false, placeholder: "Message #{@chatroom.inquiry.offer.user.business_name}" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
